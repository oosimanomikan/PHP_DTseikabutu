<html>
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
<link href="{{constant('root\\Bootstrap::APP_URL')}}css/styles.css" rel="stylesheet" type="text/css" />
<link href="{{constant('root\\Bootstrap::APP_URL')}}css/responsive.css" rel="stylesheet" type="text/css" />

    <title>ログインページ</title>
</head>
<body>
    <h1>ログインページ</h1>

    {% if err_msg %}
        <ul>
        {% for msg in err_msg %}
            <li>{{ msg }}</li>
        {% endfor %}
        </ul>
    {% endif %}

    <form method="post">
        <label for="username">ユーザ名:</label><br>
        <input type="text" id="username" name="username" required><br>
        <label for="password">パスワード:</label><br>
        <input type="password" id="password" name="password" required><br>

        <!-- CSRF対策用のトークンを追加 -->
        <input type="hidden" name="token" value="{{ csrf_token }}">

        <input type="submit" name="login" value="ログイン">
    </form>
</body>
</html>
